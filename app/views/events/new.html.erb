  <%= form_for @event do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :sell_price %>
      <%= f.text_field :sell_price %>

      <%= f.label :buy_price %>
      <%= f.text_field :price %>

      <%= f.label :start_time %>
      <%= f.datetime_local_field :start_time %>

      <%= f.label :end_time %>
      <%= f.datetime_local_field :end_time %>


     
      <%= f.file_field :avatar %>

      <%= f.submit "Save" %>
