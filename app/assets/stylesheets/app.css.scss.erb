body {
  background-image: url("<%= asset_path('perforated_white_leather.png') %>");
}


.header1 {
	color: #137072;
	margin: center;
	font-size: 40px;
}



.p {
  color: #137072;
  margin: center;
}

.editor {
  margin: 30px auto;
  border-width: thick;
  padding: 20px;
  width: 200px;
  height: 200px;
  background-color: #BDBDBD;
  border: 2px solid #1d2e3a;
  -moz-border-radius: 25px;
  -webkit-border-radius: 25px;
  border-radius: 25px;

}
.entry {
  margin: 30px auto;
  border-width: thick;
  padding: 20px;
  width: 600px;
  height: 400px;
  background-color: lightblue;
  border: 2px solid #1d2e3a;
  -moz-border-radius: 25px;
  -webkit-border-radius: 25px;
  border-radius: 25px;

}
.field {
  margin: 30px auto;
  border-width: thick;
  padding: 10px;
  margin-left: 40px;
  background-color: #56b292;
  border: 2px solid #1d2e3a;
  -moz-border-radius: 25px;
  -webkit-border-radius: 25px;
  border-radius: 25px;
}
.actions {
  margin-left: 60px;
}
.trade {
  margin: 20px auto;
  margin-left: 40px;
  padding: 15px 30px 15px 30px;
  border-width: thick;
  border: 2px solid #000;

}
.wrapper {
  align: center;
  margin: 20px auto;
  border-width: thick;
  padding: 10px;
  width: 120px;
  height: 120px;
  border: 3px solid #1d2e3a;
  background-color: grey;
  display: inline-block;
  vertical-align: top;
  position: relative;
  left: 400px;
  border-radius: 15px;
}
#sell {
  background-color: red;
  border-radius: 15px;
}
#buy {
  background-color: green;
  border-radius: 15px;
}
#image {
  left: 200px;
}

